@using Radzen.Blazor
@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
        

    </div>

    <main>
        <RadzenDialog /> @* Kích hoạt dịch vụ Dialog *@
        <RadzenNotification /> @* Kích hoạt Notification nếu cần *@
        <RadzenTooltip /> @* Kích hoạt Tooltip nếu cần *@
        <RadzenContextMenu /> @* Kích hoạt Context Menu nếu cần *@
        <div class="top-row px-4">
            <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
